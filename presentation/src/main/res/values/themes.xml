<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.App" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="windowActionBar">false</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.App.LargeComponent</item>
        <item name="shapeAppearanceBottomSheet">@style/ShapeAppearance.App.BottomSheet</item>

        <item name="bottomSheetDialogTheme">@style/Theme.App.BottomSheetDialog</item>

        <item name="navigationViewStyle">@style/Widget.App.NavigationView</item>
        <item name="dialogButtonStyle">@style/Widget.App.Button.Borderless.Dialog</item>
        <item name="chipStyle">@style/Widget.App.ChipView</item>
    </style>

    <style name="Theme.App.BottomSheetDialog" parent="Theme.MaterialComponents.DayNight.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="bottomSheetStyle">@style/Widget.App.BottomSheet</item>
        <item name="chipStyle">@style/Widget.App.ChipView</item>
    </style>


</resources>