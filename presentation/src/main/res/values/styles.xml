<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Widget.App.Button.Borderless.Dialog" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textAppearance">@style/TextAppearance.App.Button.Dialog</item>
        <item name="android:inputType">textCapWords</item>
    </style>

    <style name="Widget.App.TimePicker" parent="android:Widget.Material.TimePicker">
        <item name="android:headerBackground">?attr/colorSurface</item>
        <item name="android:numbersBackgroundColor">@color/gray_200</item>
    </style>

    <style name="Widget.App.DatePicker" parent="MaterialAlertDialog.MaterialComponents.Picker.Date.Calendar">
        <item name="android:hapticFeedbackEnabled">false</item>
    </style>

    <style name="Widget.App.NavigationView" parent="Widget.MaterialComponents.NavigationView">
        <item name="elevation">0dp</item>
        <item name="android:paddingBottom">?attr/actionBarSize</item>
    </style>

    <style name="Widget.App.ChipView" parent="Widget.MaterialComponents.Chip.Action">
        <item name="chipIconSize">@dimen/chip_icon_size</item>
        <item name="iconStartPadding">@dimen/chip_horizontal_padding</item>
        <item name="textEndPadding">@dimen/chip_horizontal_padding</item>
        <item name="textStartPadding">@dimen/chip_text_padding</item>
        <item name="android:textSize">@dimen/chip_text_size</item>
        <item name="chipMinHeight">@dimen/chip_min_height</item>
        <item name="android:textAppearance">@style/TextAppearance.App.ChipView</item>
        <item name="chipIconTint">?attr/colorPrimary</item>
        <item name="chipStrokeColor">?attr/colorControlNormal</item>
    </style>

    <style name="Widget.App.TextView.Stub" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">36dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textAppearance">?attr/textAppearanceHeadline3</item>
    </style>

    <style name="Widget.App.BottomSheet" parent="Widget.MaterialComponents.BottomSheet">
        <item name="shapeAppearanceOverlay">?attr/shapeAppearanceBottomSheet</item>
    </style>

    <style name="Behavior.BottomSheet" parent="">
        <item name="behavior_hideable">true</item>
        <item name="shapeAppearance">?attr/shapeAppearanceBottomSheet</item>
        <item name="layout_behavior">@string/bottom_sheet_behavior</item>
    </style>

    <style name="Behavior.BottomSheet.Navigation" parent="Behavior.BottomSheet">
        <item name="layout_behavior">@string/navigation_sheet_behavior</item>
        <item name="behavior_expanded">false</item>
        <item name="behavior_scrim_color">@color/black</item>
        <item name="behavior_scrim_emphasis">@dimen/material_emphasis_medium</item>
        <item name="behavior_scrim_clickable">true</item>
        <item name="behavior_shape_animation_disabled">true</item>
    </style>

</resources>